{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": ["dependencies"],
    "dependencyDashboard": true,
    "dependencyDashboardAutoclose": true,
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "recreateClosed": true,
        "rebaseStalePrs": true,
        "branchTopic": "lock-file-maintenance",
        "commitMessageAction": "Lock file maintenance",
        "schedule": ["before 5am on monday"],
        "prBodyDefinitions": {
            "Change": "All locks refreshed"
        }
    },
    "postUpdateOptions": ["npmDedupe"],
    "rangeStrategy": "update-lockfile",
    "rollbackPrs": true,
    "semanticCommits": "enabled",
    "pinDigests": true,
    "ignoreDeps": ["vimeo/psalm"],
    "packageRules": [
        {
            "matchManagers": ["npm"],
            "matchPackageNames": ["@types/node"],
            "versioning": "node"
        },
        {
            "matchDatasources": ["docker"],
            "addLabels": ["docker"]
        },
        {
            "matchPackagePatterns": ["opentelemetry"],
            "groupName": "OpenTelemetry",
            "groupSlug": "opentelemetry"
        },
        {
            "matchPackagePatterns": ["bugsnag", "@bugsnag"],
            "groupName": "Bugsnag",
            "groupSlug": "bugsnag"
        },
        {
            "matchDepTypes": ["devDependencies", "require-dev"],
            "addLabels": ["dev-dependencies"],
            "automerge": true
        },
        {
            "matchDepTypes": ["dependencies"],
            "addLabels": ["prod-dependencies"],
            "stabilityDays": 3
        },
        {
            "matchDepTypes": ["devDependencies", "require-dev"],
            "matchUpdateTypes": ["patch", "minor"],
            "groupName": "devDependencies (non-major)",
            "groupSlug": "dev-deps"
        },
        {
            "matchDepTypes": ["devDependencies"],
            "matchPackagePatterns": ["eslint", "prettier"],
            "addLabels": ["linters"],
            "groupName": "Linters",
            "groupSlug": "linters",
            "automerge": true
        },
        {
            "matchDepTypes": ["devDependencies"],
            "matchPackagePatterns": ["jest", "nock", "mocha", "sinon"],
            "addLabels": ["testing"],
            "groupName": "Testing Tools",
            "groupSlug": "testing",
            "automerge": true
        },
        {
            "matchPackagePatterns": ["typescript", "ts-node"],
            "groupName": "TypeScript",
            "groupSlug": "typescript",
            "automerge": true
        },
        {
            "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"],
            "groupName": "React",
            "groupSlug": "react"
        },
        {
            "matchPackagePrefixes": ["@wordpress/"],
            "groupName": "WordPress JS",
            "groupSlug": "wordpress-js"
        },
        {
            "matchUpdateTypes": ["lockFileMaintenance"],
            "automerge": true
        },
        {
            "matchManagers": ["dockerfile", "docker-compose", "github-actions"],
            "matchPackagePatterns": ["^myrotvorets/"],
            "automerge": true,
            "pinDigests": true
        },
        {
            "matchManagers": ["github-actions"],
            "matchPackagePatterns": ["^github/", "^actions/", "^docker/", "^step-security/"],
            "automerge": true
        },
        {
            "matchManagers": ["dockerfile", "docker-compose"],
            "matchPackageNames": ["wordpress", "mariadb"],
            "automerge": true
        }
    ],
    "github-actions": {
        "addLabels": ["github-actions"],
        "pinDigests": true
    },
    "dockerfile": {
        "pinDigests": true,
        "addLabels": ["docker"]
    },
    "docker-compose": {
        "pinDigests": true,
        "addLabels": ["docker"]
    },
    "php": {
        "addLabels": ["php"]
    },
    "js": {
        "addLabels": ["javascript"]
    },
    "pin": {
        "automerge": true
    },
    "regex": {
        "pinDigests": true
    },
    "suppressNotifications": [],
    "hostRules": [
        {
            "matchHost": "https://npm.pkg.github.com/",
            "hostType": "npm",
            "token": "{{ secrets.GITHUB_PKG_TOKEN }}"
        }
    ],
    "npmrc": "@organizationName:registry=https://npm.pkg.github.com/",
    "npmrcMerge": true,
    "gitAuthor": "Myrotvorets <support+renovate@myrotvorets.center>"
}
